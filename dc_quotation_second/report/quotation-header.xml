<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="dc_quotation_header" inherit_id='web.external_layout_standard'>
            <xpath expr="//div[hasclass('header')]" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-4">
                            <img src="/dc_quotation_second/static/src/img/logo-actual.png" alt="Logo" style="max-height:130px"/>
                        </div>
                        <div class="col-4" />
                        <div class="col-4 text-right mb4">
                            <h1 style="padding-top:80px"><strong>Quotation</strong></h1>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>