<odoo>
    <data>


        <record id="action_acc_move_petty_view" model="ir.actions.act_window">
            <field name="name">Petty Cash</field>
            <field name="res_model">account.move</field>
            <field name="domain">[('is_petty', '=', True)]</field>
            <field name="context">{'default_is_petty': 1,'type':'entry'}</field>

            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('account.view_move_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('account.view_move_form')})]"/>
        </record>

        <record id="ks_global_discount_invoice_view_form" model="ir.ui.view">
            <field name="name">ks.global.discount.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='ref']" position="after">
                    <field name="cheque_no" attrs="{'invisible':[('type','!=','in_invoice')]}"/>
                    <field name="purpose"/>
                    <field name="old_date"/>
                    <field name="is_petty" invisible="1"/>


                </xpath>

<!--                <xpath expr="//field[@name='journal_id']" position="attributes">-->
<!--                    <attribute name="attrs">{'readonly': ['|',('name', '!=', '/'),('is_petty','=',True)]}</attribute>-->

<!--                </xpath>-->


                <xpath expr="//header" position="inside">
                    <button name="print_credit_report" class="oe_highlight" string="Print Credit note" type="object"
                            attrs="{'invisible': [('type', '!=', 'out_refund')]}"/>
                </xpath>


                <xpath expr="//form/sheet/notebook/page[1]/group" position="after">
                    <div class="ks_container">
                        <field name="ks_enable_discount" invisible="1"/>
                        <field name="ks_amount_discount" invisible="1"/>
                        <label for="ks_global_discount_type" string="Universal Discount Type:"
                               attrs="{'invisible':[('ks_enable_discount','!=',True),('ks_amount_discount','=',0)]}"/>
                        <field name="ks_global_discount_type" class="oe_inline"
                               attrs="{'invisible':[('ks_enable_discount','!=',True),('ks_amount_discount','=',0)],'readonly':['|',('ks_enable_discount','!=',True),('state', 'in', ['posted', 'cancel'])]}"/>
                    </div>
                    <div class="ks_container">
                        <label for="ks_global_discount_rate" string="Universal Discount :"
                               attrs="{'invisible':[('ks_enable_discount','!=',True),('ks_amount_discount','=',0)]}"/>
                        <field name="ks_global_discount_rate" class="oe_inline"
                               attrs="{'invisible':[('ks_enable_discount','!=',True),('ks_amount_discount','=',0)],'readonly':['|','|',('ks_enable_discount','!=',True),('state', 'in', ['posted', 'cancel']), ('ks_global_discount_type', 'in', [None, False])]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='amount_by_group']" position="after">
                    <field name="ks_amount_discount"
                           attrs="{'invisible':[('ks_enable_discount','!=',True),('ks_amount_discount','=',0)]}"/>
                </xpath>
            </field>
        </record>


        <menuitem id="menu_petty_cash" name="Petty Cash" parent="account.menu_finance_entries"
                  action="universal_discount.action_acc_move_petty_view"
                  sequence="50"/>

    </data>
</odoo>

