<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hr_employee" model="ir.actions.act_window">
        <field name="name">hr</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expiry.alert</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_hr_employee" model="ir.ui.view">
        <field name="name">custom.hr.tree</field>
        <field name="model">hr.expiry.alert</field>
        <field name="arch" type="xml">
            <tree string="HR Employee">
                <field name="name"/>
<!--                <field name="alert"/>-->

            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="action_hr_employee_form">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.expiry.alert</field>
        <field name="arch" type="xml">
            <form class="o_lead_opportunity_form">

                <sheet>
                    <separator style="color:black;font-weight:bold;font-size:28px;" string="Car Information"
                               colspan="4"/>
                    <group col="4" colspan="12">



                        <field name="name"/>
                         <field name="reason"></field>
<!--                        <field name="alert"/>-->


                    </group>
                    <notebook>
                        <page string="hr_expiry">
                            <field name="alert">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="reason"/>
                                    <field name="date"/>
                                    <field name="no_of_days"/>

                                </tree>
                            </field>


                        </page>
                    </notebook>

                </sheet>


            </form>
        </field>
    </record>
    <menuitem id="menu_hr_emp" name="HR"

              sequence="11"/>
    <menuitem name="HR" id="ums_hremployee"
              parent="menu_hr_emp"
              sequence="2" action="action_hr_employee"/>

</odoo>