                <t t-call="web.external_layout">
                    <div class="col-auto mw-100 mb-2">
                        <strong>Design Creative W.L.L</strong>
                    </div>
                    <div class="col-auto mw-100 mb-2">
                        <h1>Attendance Sheet</h1>
                    </div>

                    <div class="page">

