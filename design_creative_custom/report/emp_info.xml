<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
                id="action_report_document_empinfox"
                model="emplog.info.details"
                string="Employee info Report"
                report_type="qweb-pdf"
                name="design_creative_custom.document_report_empinfox"
                file="design_creative_custom.document_report_empinfox"

        />

        <template id="document_report_empinfox">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="col-auto mw-100 mb-2">
                        <strong>Design Creative W.L.L</strong>
                    </div>
                        <div class="col-auto mw-100 mb-2">
                        <strong>Employee Information</strong>
                    </div>

                    <div class="page">

                        <table class="table table-sm" style="page-break-inside: avoid;">
                            <thead>
                                <tr>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Roll#</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Employee Name</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Passport Expiry</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>RP Expiry</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>CPR Expiry</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Bank Name</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Bank Account Number</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>IBAN</strong>
                                        </div>
                                    </td>

                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="dtax" t-as="line">

                                    <tr>
                                        <td>
                                            <span t-esc="line.get('roll')"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.get('emp')"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.get('pexp')"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.get('rpexp')"/>

                                        </td>
                                        <td>
                                            <span t-esc="line.get('cprexp')"/>

                                        </td>

                                        <td>
                                            <span t-esc="line.get('bname')"/>

                                        </td>

                                        <td>
                                            <span t-esc="line.get('bacount')"/>

                                        </td>


                                    </tr>

                                </t>


                            </tbody>

                        </table>


                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
