<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_saleorder">
        <field name="name">sale.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <field name="is_allmaterial_availbile" invisible="1"/>
                <button name="create_bom" string="Create Bom" type="object"
                        class="btn-primary" attrs="{'invisible':[('is_allmaterial_availbile','=',False)]}"/>

                <button name="process_material"
                        attrs="{'invisible':['|',('is_allmaterial_availbile','=',True),('state','!=','sale')]}"
                        class="btn-primary" string="Create Material Requisition" type="object"/>

                <button name="material_req_internal" attrs="{'invisible':[('state','!=','sale')]}"
                        class="btn-primary" string="Create Internal Requisition" type="object"/>


            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="cost_sheet_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="project" attrs="{'invisible':[('project','=',False)]}"/>
            </xpath>


            <xpath expr="//notebook/page[@name='other_information']" position="after">
                <page string="Final Products" name="dc_final_product">
                    <field name="scope_work" force_save="1">
                        <tree editable="false">
                            <field name="product_id"/>
                            <field name="desc"/>
                            <field name="tax_id"/>
                            <field name="total_qty"/>
                            <field name="total_cost"/>
                        </tree>
                    </field>
                </page>
            </xpath>


        </field>
    </record>


    <record model="ir.ui.view" id="inherit_stokpick_form">
        <field name="name">stokes.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_toggle_is_locked']" position="after">
                <button name="goods_rec_in" attrs="{'invisible':[('picking_type_code','!=','incoming')]}"
                        class="btn-primary" string="Print Goods(In)" type="object"/>

                <button name="goods_del_out" attrs="{'invisible':[('picking_type_code','!=','outgoing')]}"
                        class="btn-primary" string="Print Goods Return(Out)" type="object"/>

                <button name="material_return_out" attrs="{'invisible':[('picking_type_code','!=','outgoing')]}"
                        class="btn-primary" string="Print Material Return(Out)" type="object"/>

            </xpath>

        </field>
    </record>


    <record model="ir.ui.view" id="inherit_accpayment_form">
        <field name="name">account.paymnt.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='cancel']" position="after">
                <button name="payment_rec_out" attrs="{'invisible':[('partner_type','=','customer')]}"
                        class="btn-primary" string="Print" type="object"/>

                <button name="payment_rec_in" attrs="{'invisible':[('partner_type','=','supplier')]}"
                        class="btn-primary" string="Print" type="object"/>

            </xpath>

            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="cheque_no" readonly="0"/>
                <field name="purpose" readonly="0"/>
                <field name="chq_date" readonly="0"/>
            </xpath>


        </field>
    </record>


</odoo>
