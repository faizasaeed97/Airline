<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="discount_account_invoice_view_form">
        <field name="name">account.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">



            <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']"
                   position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

            <xpath expr="//field[@name='ref']" position="after">
                <field name="is_commitnment" attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>

            </xpath>
           <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                 <field name="design_graphice_project" />

            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="project_proj_view_form">
        <field name="name">account.invoice.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='attachment_tree_view']" position="after">
                <button class="oe_stat_button" name="no_action" type="object" icon="fa-money">
                    <field string="Amount" name="amount_count" widget="statinfo"/>
                </button>
            </xpath>

        </field>
    </record>


</odoo>