<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mroa_process_sheets_forms">
        <field name="name">mroa.process.sheets.form</field>
        <field name="model">mroa.process.sheets</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="p_nomenclature"/>
                            <field name="assembly_no"/>
                        </group>
                        <group>
                            <field name="sheet_code"/>
                            <field name="Shop_Name"/>
                            <field name="shop_sequence"/>
                            <field name="mroa_workorders"/>
                            <field name="mroa_job_card" domain="[('production_id','=',mroa_workorders)]"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="aircraft_nomenclature"/>
                            <field name="aircraft_model"/>
                            <label for="aircraft_tail_number" style="width:190px"/>
                            <div class="o_row">
                                <field name="aircraft_tail_number"/>
                            </div>
                            <label for="aircraft_serail_number" style="width:190px"/>
                            <div class="o_row">
                                <field name="aircraft_serail_number"/>
                            </div>
                        </group>
                        <group>
                            <field name="mroa_systems"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Quality In Inspection">
                            <group>
                                <group>
                                    <field name="inspection_unit"/>
                                    <field name="inspection_reason"/>
                                    <field name="inspection_manufacturer"/>
                                    <field name="inspection_manufacturing_date"/>
                                </group>
                                <group>
                                    <label for="removed_heli" style="width:200px"/>
                                    <div class="o_row">
                                        <field name="removed_heli"/>
                                    </div>
                                    <field name="tsn"/>
                                    <field name="tso"/>
                                    <field name="total_repairs"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <label for="calendar_life_months"/>
                                    <div class="o_row">
                                        <field name="calendar_life_years"/>
                                        <span>Years</span>
                                        <field name="calendar_life_months"/>
                                        <span>Months</span>
                                    </div>
                                    <field name="starts_number"/>
                                    <field name="airbleeds_number"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="last_repair_at"/>
                                    <field name="last_repair_date"/>
                                    <field name="general_condition"/>
                                    <field name="unsatisfactory"/>
                                    <field name="if_unsatisfactory"
                                           attrs="{'invisible': [('unsatisfactory','=',False)]}"/>

                                </group>
                                <group>
                                    <field name="assembly_complete"/>
                                    <field name="parts_not_assembly" widget="many2many_tags"
                                           attrs="{'invisible': [('assembly_complete','=','Yes')]}"/>
                                    <field name="documents_completeness"/>
                                    <field name="accompanying_docs"/>
                                    <field name="repair_accepted"/>
                                </group>
                            </group>
                        </page>
                        <page string="Visual Inspection">
                            <group>
                                <group>
                                    <field name="vis_type"/>
                                </group>
                            </group>
                            <group>
                                <field name="vis_type_lines" nolabel="1">
                                    <tree decoration-danger="quality_check=='Yes'">
                                        <field name="serial_no" width="7"/>
                                        <field name="part_no" width="10"/>
                                        <field name="part_desc" width="10"/>
                                        <field name="part_drawing_no" width="10"/>
                                        <field name="q_main_item" width="10"/>
                                        <field name="q_reject" width="10"/>
                                        <field name="q_for_repair" width="10"/>
                                        <field name="quality_check" width="10"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="serial_no"/>
                                                <field name="part_no"/>
                                                <field name="part_desc"/>
                                                <field name="part_drawing_no"/>
                                                <field name="quality_check"/>
                                            </group>
                                            <group>
                                                <field name="q_main_item"/>
                                                <field name="q_reject"/>
                                                <field name="q_for_repair"/>
                                                <field name="q_for_walves"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="defect_summary"/>
                                            </group>
                                            <group>
                                                <field name="repair_method"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </group>
                            <group>
                                <field name="vis_inspection_reason" nolabel="1">
                                    <tree>
                                        <field name="in_main"/>
                                        <field name="rejected"/>
                                        <field name="for_repair"/>

                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="in_main"/>
                                                <field name="rejected"/>
                                                <field name="for_repair"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </group>
                            <group>
                                <group>
                                    <field name="vis_defect_summary"/>
                                    <field name="vis_repair_method"/>
                                </group>
                                <group>
                                    <field name="vis_repair_method"/>
                                </group>
                            </group>
                        </page>
                        <page string="Measurements">
                            <field name="measure_sheet_lines">
                                <tree decoration-danger="quality_check=='Yes'">
                                    <field name="serial_no" width="6"/>
                                    <field name="drawing_no" width="10"/>
                                    <field name="measure_type" width="10"/>
                                    <field name="measure_unit" width="10"/>
                                    <field name="measured_value" width="10"/>
                                    <field name="quality_check" width="10"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="serial_no"/>
                                            <field name="drawing_no"/>
                                            <field name="sketch_img" widget="image"/>
                                        </group>
                                        <group>
                                            <field name="test_name"/>
                                            <field name="sub_test_name"/>
                                            <field name="measure_type"/>
                                            <field name="measure_unit"/>
                                            <field name="mean_value"/>
                                            <field name="min_tolerence"/>
                                            <field name="max_tolerence"/>

                                            <label for="measured_value" style="width:190px"/>
                                            <div class="o_row">
                                                <field name="measured_value"/>
                                            </div>
                                            <label for="measured_value_after" style="width:190px"/>
                                            <div class="o_row">
                                                <field name="measured_value_after"/>
                                            </div>

                                            <label for="measring_points" style="width:190px"/>
                                            <div class="o_row">
                                                <field name="measring_points"/>
                                            </div>

                                            <field name="Date_time"/>

                                        </group>
                                    </group>
                                    <group>
                                        <group>

                                        </group>
                                        <group>
                                            <label for="expand_code" style="width:190px"/>
                                            <div class="o_row">
                                                <field name="expand_code"/>
                                            </div>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Assembling">
                            <field name="ass_type_lines">
                                <tree decoration-danger="quality_check=='Yes'">
                                    <field name="serial_no" width="6"/>
                                    <field name="action" width="10"/>
                                    <field name="action_description" width="10"/>
                                    <field name="task_card_reference" width="10"/>
                                    <field name="quality_check" width="10"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="serial_no"/>
                                            <field name="action"/>
                                            <field name="action_description"/>
                                        </group>
                                        <group>
                                            <field name="task_card_reference"/>
                                            <field name="quality_check"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Sub Assembly Testing" invisible="1">
                            <field name="sub_ass_type_lines">
                                <tree decoration-danger="quality_check=='Yes'">
                                    <field name="serial_no" width="6"/>
                                    <field name="action" width="10"/>
                                    <field name="action_description" width="10"/>
                                    <field name="measure_type" width="10"/>
                                    <field name="measure_unit" width="10"/>
                                    <field name="quality_check" width="10"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="serial_no"/>
                                            <field name="action"/>
                                            <field name="action_description"/>
                                        </group>
                                        <group>
                                            <field name="measure_type"/>
                                            <field name="measure_unit"/>
                                            <field name="measured_value"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="min_tolerence"/>
                                            <field name="max_tolerence"/>
                                        </group>
                                        <group>
                                            <field name="expand_code"/>
                                            <field name="quality_check"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Test Complete Assembly" invisible="1">
                            <field name="ass_type_lines">
                                <tree editable="bottom" decoration-danger="quality_check=='Yes'">
                                    <field name="serial_no" width="6"/>
                                    <field name="action" width="10"/>
                                    <field name="action_description" width="10"/>
                                    <field name="note" width="10"/>
                                    <field name="quality_check" width="10"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Test Bench Tests" invisible="1">
                            <field name="test_bench_test_lines">
                                <tree editable="bottom" decoration-danger="quality_check=='Yes'">
                                    <field name="serial_no" width="6"/>
                                    <field name="p_desc" width="10"/>
                                    <field name="p_m_manual" width="10"/>
                                    <field name="actual_parameters" width="10"/>
                                    <field name="quality_check" width="10"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Repair" invisible="1">
                            <field name="repair_sheet_lines">
                                <tree editable="bottom" decoration-danger="quality_check=='Yes'">
                                    <field name="serial_no" width="6"/>
                                    <field name="action_description" width="10"/>
                                    <field name="measurement" width="10"/>
                                    <field name="measurement_value" width="10"/>
                                    <field name="image" widget="image" width="10"/>
                                    <field name="quality_check" width="10"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Process Sheet Status">
                            <group>
                                <group>
                                    <field name="document_Numebr"/>
                                    <field name="issue_Number"/>
                                    <field name="reference"/>
                                    <field name="issue_Date"/>
                                </group>
                                <group>
                                    <field name="effective_Date"/>
                                    <field name="revised_page"/>
                                    <field name="page_no"/>
                                    <field name="revision_date"/>
                                    <field name="Remarks"/>

                                </group>
                                <group>
                                    <field name="Prepared_by"/>
                                    <field name="Reviewed_By"/>
                                    <field name="Approved_By"/>

                                </group>
                            </group>
                        </page>
                        <page string="Quality Out Inspection">
                            <group>
                                <group>
                                    <field name="Nomenclature"/>
                                    <field name="Assembly_Serial_No"/>
                                    <field name="Work_Order_Number"/>
                                    <field name="pdc_date"/>
                                </group>
                                <group>
                                    <field name="date_Completed"/>
                                    <field name="assembly_Status"/>
                                    <field name="service_Life"/>
                                    <field name="calender_Life"/>
                                    <field name="completeness_of_documents"/>

                                </group>
                                <group>
                                    <field name="accompanying_documentation"/>
                                    <field name="ar_certificate"/>
                                    <field name="action_Step_Descrption"/>

                                    <field name="observation"/>
                                    <field name="task_Card_Reference"/>
                                </group>
                            </group>


                        </page>

                        <page string="Quality Certificate">

                            <group string="Quality Certificate">

                                <field name="quality_certifcation" nolabel="1">
                                    <tree editable="top">
                                        <field name="assembly_Nomenclature"/>
                                        <field name="serial_Number"/>
                                        <field name="biometric_QCI"/>
                                        <field name="Biometric_QAI"/>
                                    </tree>
                                </field>

                            </group>

                        </page>


                        <page string="Preserving Certificate">
                            <group string="Preserving Certification">
                                <field name="preserving_certification" nolabel="1">
                                    <tree editable="top">
                                        <field name="assembly_Nomenclature"/>
                                        <field name="serial_Number"/>
                                        <field name="biometric_QCI"/>
                                        <field name="Biometric_QAI"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Packging Certificate">
                            <group string="Packging Certification">
                                <field name="packging_certification" nolabel="1">
                                    <tree editable="top">
                                        <field name="assembly_Nomenclature"/>
                                        <field name="serial_Number"/>
                                        <field name="biometric_QCI"/>
                                        <field name="Biometric_QAI"/>
                                    </tree>
                                </field>
                            </group>
                        </page>

                    </notebook>
                    <group>
                        <group>

                            <field name="technician_number"/>
                            <field name="technician_name"/>
                            <field name="technician_bio"/>
                        </group>
                        <group>
                            <field name="Date_time"/>
                            <field name="Supervisor_Number"/>

                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="qci_number"/>
                            <field name="qci_name"/>
                            <field name="qci_bio"/>
                        </group>
                        <group>
                            <field name="qai_number"/>
                            <field name="qai_name"/>
                            <field name="qai_bio"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="inspector"/>
                            <field name="supervisor"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="mroa_process_sheets_trees">
        <field name="name">mroa.process.sheets.tree</field>
        <field name="model">mroa.process.sheets</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="assembly_no"/>
                <field name="sheet_code"/>
                <field name="shop_sequence"/>
                <field name="qci_name"/>
                <field name="qai_name"/>
                <!--                <field name="performed_by"/>-->
                <field name="inspector"/>
                <field name="supervisor"/>
            </tree>
        </field>
    </record>
    <record id='mroa_process_sheets_action' model='ir.actions.act_window'>
        <field name="name">Process Sheets</field>
        <field name="res_model">mroa.process.sheets</field>
        <field name="view_mode">tree,form</field>
        <field name='view_id' ref='mroa_process_sheets_trees'/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Process Sheets
            </p>
        </field>
    </record>
</odoo>