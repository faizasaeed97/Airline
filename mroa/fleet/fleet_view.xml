    <record model="ir.ui.view" id="mroa_fleet_vehicle_model_view_tree">
        <field name="name">fleet.vehicle.model.tree</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref='fleet.fleet_vehicle_model_view_tree'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='brand_id']" position="attributes">
                <attribute name='string'>Original Equipment Manufacturer (OEM)</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="nomenclature_name"/>
                <field name="aircraft_alias"/>
                <field name="manufacture_origin"/>
                <field name="aircraft_type"/>
                <field name="aircraft_category"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="mroa_fleet_vehicle_model_view_form">
        <field name="name">fleet.vehicle.model.form</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref='fleet.fleet_vehicle_model_view_form'/>
        <field name="arch" type="xml">
            <label for="name" position="replace">
                <label for="nomenclature_name"/>
            </label>
            <field name="name" position="replace">
                <field name="nomenclature_name"/>
            </field>
            <field name='manager_id' position='before'>
                <field name="aircraft_alias"/>
                <label for="manufacture_origin" style="width: 170px"/>
                <div class="o_row">
                    <field name="manufacture_origin"/>
                </div>
            </field>
            <page name="vendors" position="after">
                <page name="since_new" string="Since New">
                    <group>
                        <group>
                            <label for="total_service_life"/>
                            <div class="o_row">
                                <field name="total_service_life"/><span>Hours</span>
                            </div>
                            <label for="total_calendar_life_months"/>
                            <div class="o_row">
                                <field name="total_calendar_life_years"/><span>Years, </span>
                                <field name="total_calendar_life_months"/><span>Months</span>
                            </div>
                        </group>
                        <group>
                            <label for="total_landing_numbers" style="width:180px"/>
                            <div class="o_row">
                                <field name="total_landing_numbers"/>
                            </div>
                        </group>
                    </group>
                </page>
                <page name="since_overhaul" string="Since Overhaul">
                    <group>
                        <group>
                            <label for="overhaul_service_life"/>
                            <div class="o_row">
                                <field name="overhaul_service_life"/><span>Hours</span>
                            </div>
                            <label for="overhaul_calendar_life_months"/>
                            <div class="o_row">
                                <field name="overhaul_calendar_life_years"/><span>Years, </span>
                                <field name="overhaul_calendar_life_months"/><span>Months</span>
                            </div>
                        </group>
                        <group>
                            <label for="overhaul_landing_numbers" style="width:200px"/>
                            <div class="o_row">
                                <field name="overhaul_landing_numbers"/>
                            </div>
                        </group>
                    </group>
                </page>
            </page>
            <xpath expr="//group[1]/group[1]" position="after">
                <group>
                    <field name="aircraft_type"/>
                    <field name="aircraft_category"/>
                    <field name="part_numbers"/>
                </group>
            </xpath>
            <field name='name' position='attributes'>
                <attribute name='placeholder'>e.g. Nomenclature Of Aircraft</attribute>
            </field>
            <label for='brand_id' position='attributes'>
                <attribute name='string'>Original Equipment Manufacturer (OEM)</attribute>
            </label>
        </field>
    </record>

