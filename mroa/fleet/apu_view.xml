<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mroa_engines_apu_form">
        <field name="name">Aircraft Engines Form</field>
        <field name="model">mroa.fleet.engines.apu</field>
        <field name="arch" type="xml">
            <form string="Systems Form">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="manufacture_date" />
                            <field name="first_use_date" />
                        </group>
                    </group>
                    <group string="Since New">
                        <group>
                            <label for="time_since_new" />
                            <div class="o_row">
                                <field name="time_since_new" /><span>Hours</span>
                            </div>
                            <label for="calendar_total_life_years" />
                            <div class="o_row">
                                <field name="calendar_total_life_years" /><span>Years</span>
                                <field name="calendar_total_life_months" /><span>Months</span>
                            </div>
                            <field name="total_apu_starts" />
                        </group>
                    </group>
                    <group string="Since Overhaul">
                        <group>
                            <label for="time_last_overhaul" />
                            <div class="o_row">
                                <field name="time_last_overhaul" /><span>Hours</span>
                            </div>
                            <label for="last_calendar_total_life_years" />
                            <div class="o_row">
                                <field name="last_calendar_total_life_years" /><span>Years</span>
                                <field name="last_calendar_total_life_months" /><span>Months</span>
                            </div>
                            <field name="last_total_apu_starts" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="mroa_engines_apu_tree">
        <field name="name">Aircraft Engines</field>
        <field name="model">mroa.fleet.engines.apu</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="manufacture_date" />
                <field name="first_use_date" />
            </tree>
        </field>
    </record>
    <record id='mroa_engines_apu_action' model='ir.actions.act_window'>
        <field name="name">APU</field>
        <field name="res_model">mroa.fleet.engines.apu</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new APU
            </p>
        </field>
    </record>
</odoo>