<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_reference_price_form">
        <field name="name">mroa.product.reference.price.form</field>
        <field name="model">mroa.product.reference.price</field>
        <field name="arch" type="xml">
            <form string="Systems Form">
                <sheet>
                    <div class="oe_title">
                        <label for="product_id" class="oe_edit_only" />
                        <h1>
                            <field name="product_id" required="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="last_reference_price" style="width: 220px" />
                            <div class="o_row">
                                <field name="name" />
                            </div>
                            <field name="last_reference_price" attrs="{'invisible':[('estimated_price','=',True)]}" />
                            <field name="estimated_price" />
                            <field name="estimated_price_value"
                                   attrs="{'invisible':[('estimated_price','=',False)],'required':[('estimated_price','=',True)]}" />
                            <label for="purchase_currency" />
                            <div class="o_row">
                                <field name="purchase_currency" />
                            </div>
                        </group>
                        <group>
                            <label for="purchase_year" />
                            <div class="o_row">
                                <field name="purchase_year" />
                            </div>
                            <label for="procurement_condition" style="width:200px" />
                            <div class="o_row">
                                <field name="procurement_condition" />
                            </div>
                        </group>
                    </group>
                    <group string="Inflation Rates">
                        <field name="inflation_rates" nolabel="1">
                            <tree editable="bottom">
                                <field name="inflation_year" width="14" />
                                <field name="currency" width="14" />
                                <field name="infaltion_rate" attrs="{'required':[('inflation_year','!=',False)]}" width="14" />
                                <field name="lrp_current_year" width="14" readonly="1" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="product_reference_price_tree">
        <field name="name">mroa.product.reference.price.tree</field>
        <field name="model">mroa.product.reference.price</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="last_reference_price" />
                <field name="purchase_currency" />
                <field name="purchase_year" />
                <field name="procurement_condition" />
            </tree>
        </field>
    </record>
    <record id='product_reference_price_action' model='ir.actions.act_window'>
        <field name="name">Product Reference Price</field>
        <field name="res_model">mroa.product.reference.price</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Reference Price
            </p>
        </field>
    </record>

    <record model="ir.ui.view" id="product_procurement_condition_tree">
        <field name="name">product.tail.procurement.condition.tree</field>
        <field name="model">product.tail.procurement.condition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id='product_procurement_condition_action' model='ir.actions.act_window'>
        <field name="name">Procurement Condition</field>
        <field name="res_model">product.tail.procurement.condition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Procurement Condition
            </p>
        </field>
    </record>
</odoo>